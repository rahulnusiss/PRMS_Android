<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".maintainuser.android.ui.MaintainUserScreen">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Id"
            tools:text="User Id" />
        <EditText
            android:id="@+id/maintain_user_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="User Id" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            tools:text="Name" />
        <EditText
                android:id="@+id/maintain_user_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="User Name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            tools:hint="Password" />

        <EditText
            android:id="@+id/maintain_user_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role"
            tools:text="Role" />
        <Switch
            android:id="@+id/switchStationManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manager" />
        <Switch
            android:id="@+id/switchPresenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presenter" />
        <Switch
            android:id="@+id/switchProducer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producer" />
        <Switch
            android:id="@+id/switchSystemAdminstrator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin" />
    </LinearLayout>